<div class="container new-dose">
  <h1 id="new-dose-title">Add a new dose</h1>

  <div id="new-dose-body">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, include_blank: false %>
      <%= f.input :description, placeholder: "500 ml or 1 or 2tsp..." %>
      <%= f.submit "Add", class: "btn btn-danger" %>
    <% end %>
    <div class="new-btn-home my-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-left"></i>
        <span> Back to cocktails</span>
      <% end %>
    </div>
  </div>

</div>
