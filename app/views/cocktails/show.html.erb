<div class="row justify-content-center align-items-center text-center show-container pt-2">
  <div class="col-9 align-self-center mb-3">
    <div class="card show-card">
      <div class="row no-gutters">
        <div class="col-sm-6 col-md-5">
          <%= cl_image_tag @cocktail.photo, class: "card-img" %>
        </div>
        <div class="col-sm-6 col-md-7">
          <div class="card-body">
            <h1 class="card-title"><%= @cocktail.name %></h1>
            <div class="card-text">
              <h4>Ingredients</h4>
              <p>juice of 1 lime</p>
              <p>1 tsp granulated sugar</p>
              <p>small handful mint leaves</p>
              <p>60ml white rum</p>
              <p>soda water, to taste</p>
              <ul>
                <% @cocktail.doses.each do |dose| %>
                  <li>
                    <%= dose.ingredient.name %> | <%= dose.description %> |
                    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="card-text">
              <small class="text-muted">
                <%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-outline-danger" do %>
                <i class="fas fa-plus"></i>
                <span> ingredient</span>
                <% end %>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="show-btn-home my-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-left"></i>
        <span> Back to cocktails</span>
      <% end %>
    </div>
  </div>
</div>
