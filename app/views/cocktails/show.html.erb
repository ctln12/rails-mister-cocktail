<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2><%= @cocktail.name %></h2>

<h3>Composition</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> | <%= dose.description %> |
      <%= link_to "Delete", cocktail_dose_path(dose.cocktail, dose.id), method: :delete, data: { confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %> |
<%= link_to "Back to cocktails", cocktails_path %>
