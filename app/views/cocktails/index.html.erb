<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= image_url("banner.jpg") %>);">
  <div class="container text-center">
    <h1 >Cocktail Manager</h1>
    <p>Share your own amazing drinks!</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="container my-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4 my-3">
        <%= link_to cocktail_path(cocktail), class: "home-card-link" do %>
          <div class="card home-card">
            <%= cl_image_tag cocktail.photo, class: "card-img" %>
            <div class="card-img-overlay">
              <div class="card-title"><h5><%= cocktail.name %></h5></div>
              <div class="card-text">
                <% cocktail.ingredients.each do |ingredient| %>
                  <p>-<% ingredient.name %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
