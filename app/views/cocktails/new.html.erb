<div class="container new-cocktail">
  <h1 id="new-cocktail-title">Add a new cocktail</h1>

  <div id="new-cocktail-body">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, input_html: { placeholder: "Tequila Sunrise" } %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create", class: "btn btn-danger" %>
    <% end %>
    <div class="new-btn-home my-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-left"></i>
        <span> Back to cocktails</span>
      <% end %>
    </div>
  </div>

</div>
